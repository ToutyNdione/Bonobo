{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bonobos list</h1>

    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Age</th>
                <th>Famille</th>
                <th>Race</th>
                <th>Nourriture</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                
                <td>{{ user.username }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.famille }}</td>
                <td>{{ user.race }}</td>
                <td>{{ user.nourriture }}</td>
                <td>
                    <ul>
                        {% if  app.user == user %}

                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                        {% else%}
                         <li>
                            <a href="{{ path('addfriend', { 'id': user.id })}}">add friend</a>
                        </li>
                        {%endif%}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
